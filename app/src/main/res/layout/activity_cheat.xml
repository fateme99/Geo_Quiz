<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:id="@+id/root_layout_cheat"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".controller.CheatActivity">

    <TextView
        android:id="@+id/sure_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/sure_txt"
        android:textColor="@color/black_color"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/answer_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/black_color"
        android:textSize="30sp"
        tools:text="درست" />

    <Button
        android:id="@+id/cheatInCheat_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/cheat_txt"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>