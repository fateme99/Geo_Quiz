<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".controller.SettingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"
        android:text="@string/edit_size"
        android:textSize="24sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RadioGroup
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/small_radioBtn"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/meduim_radioBtn"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/larg_radioBtn"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_height="wrap_content"/>

            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/small_size"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/meduim_size"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/large_size"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>





    </LinearLayout>
    <Button
        android:id="@+id/setting_save_btn"
        android:layout_width="wrap_content"
        android:text="@string/save_txt"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

</LinearLayout>