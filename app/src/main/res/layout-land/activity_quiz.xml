<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right|center_vertical">

    <LinearLayout
        android:id="@+id/root_layout_quiz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout

            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_gravity="center_horizontal|top|left"
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal|top"
                    android:textSize="24sp">

                </TextView>

                <ImageButton
                    android:id="@+id/setting_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_gravity="right|top"
                    android:src="@drawable/ic_setting" />


                <TextView
                    android:id="@+id/question_text"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="20dp"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/false_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_close"
                        android:text="@string/btn_false_text"
                        android:textSize="24sp"
                        android:textStyle="bold">

                    </ImageButton>

                    <ImageButton
                        android:id="@+id/true_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_checked"
                        android:textSize="18sp"
                        android:textStyle="bold">

                    </ImageButton>

                </LinearLayout>


                <ImageButton
                    android:id="@+id/btn_double_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_double_left"
                    android:textSize="24sp"
                    android:textStyle="bold">

                </ImageButton>

                <ImageButton
                    android:id="@+id/btn_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/ic_left"
                    android:textSize="24sp"
                    android:textStyle="bold">

                </ImageButton>

                <ImageButton
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/ic_right"
                    android:textSize="24sp"
                    android:textStyle="bold">

                </ImageButton>

                <ImageButton
                    android:id="@+id/btn_double_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:src="@drawable/ic_double_right"
                    android:textSize="24sp"
                    android:textStyle="bold">

                </ImageButton>

                <Button
                    android:id="@+id/cheat_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="@string/cheat_txt"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </Button>

            </FrameLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/score_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:gravity="center_horizontal|top"
                    android:text="@string/game_over"
                    android:textColor="@color/purple"
                    android:textSize="36sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/score_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/gold"
                    android:textSize="30sp">

                </TextView>

                <ImageButton
                    android:id="@+id/reset_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_reset">

                </ImageButton>
            </FrameLayout>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>